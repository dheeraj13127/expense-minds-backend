{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "outDir": "./dist",

    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "*.ts"]
}
